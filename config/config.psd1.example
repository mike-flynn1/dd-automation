@{
    # Tools enable/disable flags
    Tools = @{
        TenableWAS = $true
        SonarQube  = $false
        BurpSuite  = $false
        DefectDojo = $false
        GitHub = @{
            CodeQL = $true
            SecretScanning = $true
            Dependabot = $true
        }
    }

    # File paths for tools requiring local inputs
    Paths = @{
        BurpSuiteXmlFolder = 'C:\Scans\Burp'
    }

    # API base URLs for tools
    ApiBaseUrls = @{
        DefectDojo = 'https://defect-dojo.internal.bamtech.net/api/v2'
        TenableWAS = 'https://fedcloud.tenable.com/'
        SonarQube  = 'https://sonarqube.example.com/api'
        BurpSuite  = 'http://127.0.0.01:1234/api'
        GitHub     = 'https://api.github.com'
    }

    TenableWASScanNames = @(
        'Scan 2'
        'Scan 1'
    )
    
    # DefectDojo selection identifiers
    DefectDojo = @{
        ProductId         = 0  # Enter the DefectDojo product Id
        EngagementId      = 0  # Default engagement for all scan types
        
        # Optional: Per-tool engagement overrides (CLI/config-only feature)
        # If not specified, each tool uses the default EngagementId above
        # TenableWASEngagementId  = 0  # Separate engagement for TenableWAS DAST scans
        # BurpSuiteEngagementId   = 0  # Separate engagement for BurpSuite DAST scans
        # CodeQLEngagementId      = 0  # Separate engagement for GitHub CodeQL SAST scans
        # SecretScanEngagementId  = 0  # Separate engagement for GitHub Secret Scanning
        # DependabotEngagementId  = 0  # Separate engagement for GitHub Dependabot SCA scans
        
        # Pre-configured test IDs (used by GUI, optional for CLI)
        # If set, takes precedence; if 0/omitted, auto-creates test under engagement
        SonarQubeTestId        = 0  # Required for SonarQube (no auto-create)
        BurpSuiteTestId        = 0  # If 0, auto-creates "BurpSuite Scan" test
        GitHubDependabotTestId = 0  # If 0, auto-creates "GitHub Dependabot" test
        
        MinimumSeverity   = 'Low'
        APIScanConfigId = 1
    }

    # GitHub Organizations to process (one or many)
    GitHub = @{
        Orgs = @(
            'BAMTech-MyVector'
            #'Example-AnotherOrg'
        )

        # Repository filtering options (all optional)
        SkipArchivedRepos = $true  # Skip archived repositories (default: true)

        # Include-only filter: If specified, ONLY these repos will be processed
        # Supports wildcards: 'production-*', '*-api', '*test*'
        # If not specified or empty, all repos are considered (subject to exclude filter)
        IncludeRepos = @(
            # 'production-*'    # Include all repos starting with 'production-'
            # 'critical-app'    # Include specific repo by exact name
            # '*-security'      # Include all repos ending with '-security'
        )

        # Exclude filter: These repos will be skipped
        # Supports wildcards: 'test-*', '*-deprecated', '*-old'
        # Applied after include filter
        ExcludeRepos = @(
            # 'test-*'          # Exclude all repos starting with 'test-'
            # '*-demo'          # Exclude all repos ending with '-demo'
            # 'archived-*'      # Exclude all repos starting with 'archived-'
            # 'old-legacy-app'  # Exclude specific repo by exact name
        )
    }

    # Webhook Notifications (Optional)
    Notifications = @{
        # WebhookUrl = 'https://your-webhook-url-here'
        # WebhookType = 'PowerAutomate'  # Options: 'PowerAutomate' (default), 'Teams'
    }

}

